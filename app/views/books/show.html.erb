<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <% if @error_comment.present? %>
      <div id="error_explanation">
      <h2><%= @error_comment.errors.count %></h2>
      <ul>
        <% @error_comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
    <table class='table'>
      <h2>
        User info
      </h2>
      <tr>
      <%= attachment_image_tag @user,:profile_image,fallback: " ", size: "100x100" %>
      </tr>
      <tr>
        <th>
          name
        </th>
        <th>
          <%= @user.name %>
        </th>
      </tr>
      <tr>
        <th>
          introduction
        </th>
        <th>
          <%= @user.introduction %>
        </th>
      </tr>
      </table>
      <div class='row'>
       <%= link_to '',edit_user_path(@user),class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user" %>
      </div>
      <h2 class="mt-3">New book</h2>
      <td class="form">
      <%= form_with model: @newbook, local:true do |f| %>
      <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control book_title' %>
      </div>
      <div class="form-group">
      <%= f.label :opinion %>
      <%= f.text_area :body, class: 'form-control book_body' %>
      </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
      <% end %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>
  		  Book detail
  		</h2>
  		<td id="favorite_buttons" >
        <%= render 'books/show-favorites', books: @books %>
      </td>
      <td id="comment_button">
        <%= render 'books/show-comment', comments: @comments %>
      </td>
        </div>
    </div>
  </div>
</div>