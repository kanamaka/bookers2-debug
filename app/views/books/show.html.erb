<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
    <table class='table'>
      <h2>
        User info
      </h2>
      <tr>
      <%= attachment_image_tag @user,:profile_image,fallback: " ", size: "100x100" %>
      </tr>
      <tr>
        <th>
          name
        </th>
        <th>
          <%= @user.name %>
        </th>
      </tr>
      <tr>
        <th>
          introduction
        </th>
        <th>
          <%= @user.introduction %>
        </th>
      </tr>
      </table>
      <div class='row'>
       <%= link_to '',edit_user_path(@user),class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user" %>
      </div>
      <h2 class="mt-3">New book</h2>
      <td class="form">
      <%= form_with model: @newbook, local:true do |f| %>
      <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control book_title' %>
      </div>
      <div class="form-group">
      <%= f.label :opinion %>
      <%= f.text_area :body, class: 'form-control book_body' %>
      </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
      <% end %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
  		    <td><%= link_to user_path(@book.user) do %>
            <%= attachment_image_tag(@book.user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg") %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, book_path(@book) %></td>
          <td><%= @book.body %></td>
          <td>
          <% if current_user.favorited_by?(@book.id) %>
           <td>
            <%= link_to " ", destroy_favorite_path(@book), method: :DELETE, remote: true, class: "fas fa-heart delete-btn" %>
            <%= @book.favorites.count %>
           </td>
          <% else %>
            <%= link_to " ", create_favorite_path(@book), method: :POST, remote: true, class: "fas fa-heart like-btn" %>
            <%= @book.favorites.count %>
          <% end %>
          <td>
            コメント数
            <% if @comments %>
             <% @comments.each do |comment| %>
             <%= link_to @comment.user.name, user_path(comment.user_id) %>
             <%= comment.text %>
             <% end %>
            <% end %>
          </td>
          </tr>
        </tr>
        </table>
        <div class="form-group">
          <% if current_user %>
          <%= form_with(model: [@book, @comment], local: true) do |form| %>
          <%= form.text_area :text, placeholder: " ", rows: 10 %><br>
          <%= form.submit "送信" %>
          <% end %>
          <% end %>
        </div>
    </div>
  </div>
</div>