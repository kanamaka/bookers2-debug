<% comments.each do |comment| %><br>
<%= attachment_image_tag(@user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %>
<%= comment.comment %>
<% if comment.user_id == current_user.id %>
<%= link_to "Destroy", book_comment_path(comment.book, comment), method: :delete, remote: true, class: "btn-sm btn-danger" %>
<% end %>
<% end %>
<%= render 'books/show-form', comments: comments %>
