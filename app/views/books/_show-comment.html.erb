<% @comments.each do |comment| %>
<%= attachment_image_tag(@user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %>
<%= comment.comment %>
<% if comment.user_id == current_user.id %>
<%= link_to "Destroy", book_comment_path(comment.book, comment), method: :delete, class: "btn-sm btn-danger" %><br>
<% end %>
<% end %>
<div class="form-group">
<%= form_with model:[@book, @comment] do |f| %>
<%= f.text_area :comment, :size=>"100x3",placeholder: " " %>
<%= f.submit "送信する", class: "btn btn-success mb-4" %>
<% end %>