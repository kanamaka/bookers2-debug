<h2>Follower_Users</h2>
  <% if @users.exists? %>
  <thead>
    <tr>
    <tr>
     <th>
     image
     </th>
    </tr>
    <tr>
     <th>
      name
     </th>
    </tr>
    </tr>
  </thead>
  <table class='table'>
      <% @users.each do |user| %>
      <tr>
        <td>
        <%= attachment_image_tag @user,:profile_image,fallback: " ", size: "100x100" %>
        </td>
        <td>
        <%= link_to user_path(user.id) do %>
         <%= user.name %>
        <% end %>
        </td>
        <td>
         フォロー数: <%= user.followings.count %>
        </td>
        <td>
         フォロワー数: <%= user.followers.count %>
        </td>
        <td>
         <%= link_to 'show',user_path(user.id) %>
        </td>
      </tr>
    <% end %>
  </table>
    <% else %>
     <p>ユーザーはいません</p>
    <% end %>